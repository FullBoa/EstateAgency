<%= stylesheet_link_tag    'Bundles/authorization-page', media: 'all', 'data-turbolinks-track' => false %>

<div class="body-overlay"></div>
<div class="authorization-block">
  <h2 class="title">Авторизация</h2>
  <%= flash[:alert] %>
  <div class="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <div>Логин</div>
          <div class="input">
            <%= f.text_field :login, autofocus: true %>
          </div>
        </div>

        <div class="field">
          <div>Пароль</div>
          <div class="input">
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Вход", class: 'btn dark-btn'%>
        </div>
    <% end %>
  </div>
</div>


